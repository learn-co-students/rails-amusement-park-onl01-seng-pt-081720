<div class="container" role="main">
  <h1>Listing attractions</h1>
  <table class="table">
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @attractions.each do |attraction| %>
        <tr>
          <td><strong>Name</strong></td>
          <td><strong>Tickets</strong></td>
          <td><strong>Details</strong></td>
        </tr>
        <tr>
          <td><%= attraction.name %></td>
          <td><%= attraction.tickets %></td>
          <% if current_user.admin == true %>
          <td><%= link_to "Show #{attraction.name}", attraction_path(attraction) %></a></td>
          <% else %>
          <td><%= link_to "Go on #{attraction.name}", attraction_path(attraction) %></a></td>
          <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <% if current_user.admin == true %>
  <p><%= link_to "New Attraction", new_attraction_path %></p>
  <% end %>
</div>

